PROJECTS := GLFW ImGui Glad yaml-cpp Box2D Lua msdfgen msdf-atlas-gen stb_image lodepng Base Basetor

.PHONY: all clean help $(PROJECTS) Dependencies

all: $(PROJECTS)

Dependencies: Box2D GLFW Glad ImGui Lua lodepng msdf-atlas-gen msdfgen stb_image yaml-cpp

GLFW:
ifneq (,$(GLFW_config))
	@echo "==== Building GLFW ($(GLFW_config)) ===="
	@${MAKE} --no-print-directory -C Base/vendor -f GLFW.make config=$(GLFW_config)
endif

ImGui:
ifneq (,$(ImGui_config))
	@echo "==== Building ImGui ($(ImGui_config)) ===="
	@${MAKE} --no-print-directory -C Base/vendor -f ImGui.make config=$(ImGui_config)
endif

Glad:
ifneq (,$(Glad_config))
	@echo "==== Building Glad ($(Glad_config)) ===="
	@${MAKE} --no-print-directory -C Base/vendor -f Glad.make config=$(Glad_config)
endif

