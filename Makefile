Basetor: Base Box2D yaml-cpp Glad ImGui GLFW Lua msdfgen msdf-atlas-gen stb_image lodepng
ifneq (,$(Basetor_config))
	@echo "==== Building Basetor ($(Basetor_config)) ===="
	@${MAKE} --no-print-directory -C Basetor -f Makefile config=$(Basetor_config)
endif

clean:
	@${MAKE} --no-print-directory -C Base/vendor -f GLFW.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f ImGui.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f Glad.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f yaml-cpp.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f Box2D.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f Lua.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f msdfgen.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f msdf-atlas-gen.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f stb_image.make clean
	@${MAKE} --no-print-directory -C Base/vendor -f lodepng.make clean
	@${MAKE} --no-print-directory -C Base -f Makefile clean
	@${MAKE} --no-print-directory -C Basetor -f Makefile clean

