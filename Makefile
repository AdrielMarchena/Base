Base: Box2D yaml-cpp Glad ImGui GLFW Lua msdfgen msdf-atlas-gen stb_image lodepng
ifneq (,$(Base_config))
	@echo "==== Building Base ($(Base_config)) ===="
	@${MAKE} --no-print-directory -C Base -f Makefile config=$(Base_config)
